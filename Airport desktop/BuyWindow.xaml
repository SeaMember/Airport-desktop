<Window x:Class="Airport_desktop.BuyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Airport_desktop="clr-namespace:Airport_desktop.Pages.Pages_BuyWindow"
        xmlns:local="clr-namespace:Airport_desktop"
        mc:Ignorable="d"
        Title="BuyWindow" Height="450" Width="800">
    <Grid>
        
        <Grid.Background>
            <ImageBrush ImageSource="Resources/Background.jpg"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Source="Resources/airport.png"
               Grid.Column="3"
               VerticalAlignment="Bottom"
               Width="130"
               HorizontalAlignment="Right"/>
        <Frame Grid.ColumnSpan="4"
               Name="MainFrame"
               NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
